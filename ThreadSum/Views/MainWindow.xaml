<Window x:Class="ThreadSum.Views.Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ViewModels="clr-namespace:ThreadSum.ViewModels"
        mc:Ignorable="d"
        Title="Sum with Threads" Height="480" Width="480" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
	<Window.DataContext>
		<ViewModels:CellViewModel></ViewModels:CellViewModel>
	</Window.DataContext>
	<DockPanel Margin="16" LastChildFill="True">
		<Grid Margin="0, 0, 0, 16" DockPanel.Dock="Top">
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Row="0" Grid.Column="0">Cantidad de filas:</TextBlock>
			<TextBox Grid.Row="0" Grid.Column="1"/>
			<TextBlock Grid.Row="1" Grid.Column="0">Cantidad de columnas:</TextBlock>
			<TextBox Grid.Row="1" Grid.Column="1"/>
		</Grid>
		<Button Margin="0, 0, 0, 16" DockPanel.Dock="Top" Grid.Row="0" Grid.Column="0">Generar</Button>
		<ItemsControl ItemsSource="{Binding}">
			<ItemsControl.Resources>
				<Style x:Key="CellStyle" TargetType="TextBlock">
					<Setter Property="FontSize" Value="16"/>
					<Setter Property="FontWeight" Value="ExtraBlack"/>
					<Setter Property="Background" Value="CornflowerBlue"/>
					<Setter Property="Text" Value="Hah"/>
				</Style>
			</ItemsControl.Resources>
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<TextBlock Style="{StaticResource CellStyle}"></TextBlock>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</DockPanel>
</Window>
